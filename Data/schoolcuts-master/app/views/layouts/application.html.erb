<!DOCTYPE html>
<html>
<head>
    <!-- Title -->
    <title><%= @school.nil? ? I18n.t(:school_cuts) : @school.short_name + " - #{I18n.t(:school_cuts)}" %></title>
    <link rel="Shortcut Icon" href="/images/favicon.ico" type="image/x-icon" />
    
    <!-- Meta -->
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="apple-mobile-web-app-title" content="School Cuts" />
    <meta http-equiv=X-UA-Compatible content="IE=edge,chrome=1" />
    <%= csrf_meta_tags %>
    
    <!-- Styles -->
    <link href="/styles/master.css" media="all" rel="stylesheet" type="text/css" />
    <link href="/styles/font-awesome.min.css" media="all" rel="stylesheet" type="text/css" />
    <link href="/styles/print.css" media="print" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.2/themes/smoothness/jquery-ui.css" />
  
    <!--[if IE 7]>
        <link href="/styles/font-awesome-ie7.min.css" rel="stylesheet" type="text/css" />
    <![endif]-->
    
    <!-- JavaScript -->
    <%= javascript_include_tag "application" %>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js" type="text/javascript"></script>
    <script src="/scripts/jquery.ga-event-tracker.js" type="text/javascript"></script>
    <script src="http://code.highcharts.com/highcharts.js" type="text/javascript"></script>
      
    <!-- Google Analytics -->
    <script type="text/javascript">
		var _gaq = _gaq || [];
		_gaq.push(['_setAccount', 'UA-37735152-3']);
		_gaq.push(['_trackPageview']);
	
		(function() {
		    var ga = document.createElement('script'); ga.type ='text/javascript'; ga.async = true;
		    ga.src = ('https:' == document.location.protocol ? 'https://ssl':'http://www') + '.google-analytics.com/ga.js';
		    var s = document.getElementsByTagName('script')[0];
		    s.parentNode.insertBefore(ga, s);
	    })();
  	</script>
</head>
<body>

<!-- /Header -->
<div id="header">
    <div id="header-content">
        <div id="logo"><a href=<%= root_path %>><i class="icon-cut"></i> <%= I18n.t(:school_cuts) %></a></div>
        
        <div id="sharing">
            <!-- AddThis Button BEGIN -->
            <div class="addthis_toolbox addthis_default_style ">
                <a class="addthis_button_facebook_like" fb:like:layout="button_count"></a>
                <a class="addthis_button_tweet"></a>
                <a class="addthis_counter addthis_pill_style"></a>
            </div>
            <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=xa-5131303d07eaa9f3"></script>
            <script type="text/javascript">
            	var addthis_config = { ui_click: true };
            </script>
            <!-- AddThis Button END -->
        </div>
        
        <div class="clear"></div>
    </div>
</div>
<!-- /Header -->

<div id="nav">
    <div id="nav-content">
        <ul>
            <!--<li class="current"><a href="/">Home</a></li>-->
            <li><%= link_to I18n.t(:home), root_path%></li>
            <li><a href="http://schoolcuts.wordpress.com"><%= I18n.t(:blog) %></a></li>
            <li><%= link_to I18n.t(:about), about_index_path %></li>
        </ul>
        
        <ul class="nav-extras">
          <li><a href="#" onclick="print(); return false;"><i class="icon-print"></i> <%= I18n.t(:print_this_page)%></a></li>
          <li><i class="icon-globe"></i><%= link_to I18n.t(:toggle_locale_label), url_for(:locale => I18n.t(:toggle_locale)) %></li>
          
          <!-- <li><a href=<%= root_path(:locale => "es")%>><i class="icon-globe"></i> Espa&ntilde;ol</a></li> -->
        </ul>
        
        <div class="clear"></div>
    </div>
</div>

<%= yield %>

<div class="content" id="discussion">
	<hr />
  <h2><%= I18n.t(:join_the_discussion) %></h2>
	
	<div class="c2l">
		<!-- Twitter Feed -->
<a class="twitter-timeline" data-dnt="true"
href="https://twitter.com/search?q=schoolcuts"
data-widget-id="312667114165108736">Tweets about "schoolcuts"</a>
<script>!function(d,s,id){var
js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
		<!-- /Twitter Feed -->
	</div>

	<div class="c2r">
		<!-- Disqus -->
		<div id="disqus_thread"></div>
		<script type="text/javascript">
		    /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
